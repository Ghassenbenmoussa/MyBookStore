{% extends 'admin/base.html.twig' %}
{% block title %}Users - Admin{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Users Management</h1>
    <span class="badge bg-info">ROLE_ADMIN Only</span>
</div>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i> <strong>Admin Access Required:</strong> Only administrators can manage user accounts and roles.
</div>

<div class="card">
    <div class="card-body">
        {% if users %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr {% if user.id == app.user.id %}class="table-primary"{% endif %}>
                                <td>{{ user.id }}</td>
                                <td>
                                    {{ user.fullName }}
                                    {% if user.id == app.user.id %}
                                        <span class="badge bg-primary">You</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-danger">Admin</span>
                                        {% elseif role == 'ROLE_AGENT' %}
                                            <span class="badge bg-warning text-dark">Agent</span>
                                        {% elseif role == 'ROLE_ABONNE' %}
                                            <span class="badge bg-secondary">Subscriber</span>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>{{ user.phone ?? '-' }}</td>
                                <td>
                                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                                    {% if user.id != app.user.id %}
                                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No users found.</p>
        {% endif %}
    </div>
</div>
{% endblock %}

