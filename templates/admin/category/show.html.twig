{% extends 'admin/base.html.twig' %}
{% block title %}Category{% endblock %}
{% block body %}
<h1>Category: {{ category.name }}</h1>
<table class="table">
    <tbody>
        <tr><th>ID</th><td>{{ category.id }}</td></tr>
        <tr><th>Name</th><td>{{ category.name }}</td></tr>
        <tr><th>Description</th><td>{{ category.description }}</td></tr>
        <tr><th>Books Count</th><td>{{ category.books|length }}</td></tr>
    </tbody>
</table>
<a href="{{ path('admin_category_index') }}" class="btn btn-secondary">Back to list</a>
<a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-warning">Edit</a>
{% endblock %}
