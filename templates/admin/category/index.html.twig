{% extends 'admin/base.html.twig' %}
{% block title %}Categories - Admin{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-tags"></i> Categories</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> New Category
    </a>
</div>
<div class="card">
    <div class="card-body">
        {% if categories %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Books</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td>{{ category.description|length > 50 ? category.description|slice(0, 50) ~ '...' : category.description }}</td>
                                <td>{{ category.books|length }}</td>
                                <td>
                                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No categories found. <a href="{{ path('admin_category_new') }}">Create one</a></p>
        {% endif %}
    </div>
</div>
{% endblock %}
