{% extends 'admin/base.html.twig' %}
{% block title %}Editor{% endblock %}
{% block body %}
<h1>Editor: {{ editor.name }}</h1>
<table class="table">
    <tbody>
        <tr><th>ID</th><td>{{ editor.id }}</td></tr>
        <tr><th>Name</th><td>{{ editor.name }}</td></tr>
        <tr><th>Address</th><td>{{ editor.address }}</td></tr>
        <tr><th>Website</th><td>{% if editor.website %}<a href="{{ editor.website }}" target="_blank">{{ editor.website }}</a>{% endif %}</td></tr>
        <tr><th>Books Count</th><td>{{ editor.books|length }}</td></tr>
    </tbody>
</table>
<a href="{{ path('admin_editor_index') }}" class="btn btn-secondary">Back to list</a>
<a href="{{ path('admin_editor_edit', {'id': editor.id}) }}" class="btn btn-warning">Edit</a>
{% endblock %}
