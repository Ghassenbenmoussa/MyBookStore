{% extends 'admin/base.html.twig' %}
{% block title %}Editors - Admin{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building"></i> Editors</h1>
    <a href="{{ path('admin_editor_new') }}" class="btn btn-success"><i class="bi bi-plus-circle"></i> New Editor</a>
</div>
<div class="card">
    <div class="card-body">
        {% if editors %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr><th>ID</th><th>Name</th><th>Address</th><th>Website</th><th>Books</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        {% for editor in editors %}
                            <tr>
                                <td>{{ editor.id }}</td>
                                <td>{{ editor.name }}</td>
                                <td>{{ editor.address }}</td>
                                <td>{% if editor.website %}<a href="{{ editor.website }}" target="_blank">{{ editor.website }}</a>{% endif %}</td>
                                <td>{{ editor.books|length }}</td>
                                <td>
                                    <a href="{{ path('admin_editor_show', {'id': editor.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('admin_editor_edit', {'id': editor.id}) }}" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                    <form method="post" action="{{ path('admin_editor_delete', {'id': editor.id}) }}" style="display:inline" onsubmit="return confirm('Delete this editor?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ editor.id) }}">
                                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No editors found. <a href="{{ path('admin_editor_new') }}">Create one</a></p>
        {% endif %}
    </div>
</div>
{% endblock %}
