{% extends 'admin/base.html.twig' %}
{% block title %}Authors - Admin{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person"></i> Authors</h1>
    <a href="{{ path('admin_author_new') }}" class="btn btn-success"><i class="bi bi-plus-circle"></i> New Author</a>
</div>
<div class="card">
    <div class="card-body">
        {% if authors %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr><th>ID</th><th>Name</th><th>Biography</th><th>Books</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        {% for author in authors %}
                            <tr>
                                <td>{{ author.id }}</td>
                                <td>{{ author.fullName }}</td>
                                <td>{{ author.biography|length > 50 ? author.biography|slice(0, 50) ~ '...' : author.biography }}</td>
                                <td>{{ author.books|length }}</td>
                                <td>
                                    <a href="{{ path('admin_author_show', {'id': author.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('admin_author_edit', {'id': author.id}) }}" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                    <form method="post" action="{{ path('admin_author_delete', {'id': author.id}) }}" style="display:inline" onsubmit="return confirm('Delete this author?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
                                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No authors found. <a href="{{ path('admin_author_new') }}">Create one</a></p>
        {% endif %}
    </div>
</div>
{% endblock %}
