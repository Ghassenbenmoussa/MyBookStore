{% extends 'admin/base.html.twig' %}
{% block title %}Book Details{% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-8">
        <h1>{{ book.title }}</h1>
        <table class="table">
            <tbody>
                <tr><th>ID</th><td>{{ book.id }}</td></tr>
                <tr><th>Title</th><td>{{ book.title }}</td></tr>
                <tr><th>Description</th><td>{{ book.description }}</td></tr>
                <tr><th>Price</th><td>${{ book.price }}</td></tr>
                <tr><th>Stock</th><td>{{ book.stock }}</td></tr>
                <tr><th>Category</th><td>{{ book.category.name }}</td></tr>
                <tr><th>Editor</th><td>{{ book.editor.name }}</td></tr>
                <tr>
                    <th>Authors</th>
                    <td>
                        {% for author in book.authors %}
                            <span class="badge bg-secondary">{{ author.fullName }}</span>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('admin_book_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-warning">Edit</a>
    </div>
    <div class="col-md-4">
        {% if book.coverImage %}
            <h5>Cover Image</h5>
            <img src="{{ asset('uploads/books/' ~ book.coverImage) }}" alt="{{ book.title }}" class="img-fluid img-thumbnail">
        {% else %}
            <div class="alert alert-info">No cover image</div>
        {% endif %}
    </div>
</div>
{% endblock %}

