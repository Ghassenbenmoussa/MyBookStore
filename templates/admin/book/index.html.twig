{% extends 'admin/base.html.twig' %}
{% block title %}Books - Admin{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-book"></i> Books</h1>
    <a href="{{ path('admin_book_new') }}" class="btn btn-success"><i class="bi bi-plus-circle"></i> New Book</a>
</div>
<div class="card">
    <div class="card-body">
        {% if books %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Editor</th>
                            <th>Authors</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>
                                    {% if book.coverImage %}
                                        <img src="{{ asset('uploads/books/' ~ book.coverImage) }}" alt="{{ book.title }}" style="width: 40px; height: auto;">
                                    {% else %}
                                        <i class="bi bi-image text-muted" style="font-size: 40px;"></i>
                                    {% endif %}
                                </td>
                                <td>{{ book.title }}</td>
                                <td>{{ book.category.name }}</td>
                                <td>{{ book.editor.name }}</td>
                                <td>
                                    {% for author in book.authors %}
                                        <span class="badge bg-secondary">{{ author.fullName }}</span>
                                    {% endfor %}
                                </td>
                                <td>${{ book.price }}</td>
                                <td>
                                    {% if book.stock == 0 %}
                                        <span class="badge bg-danger">Out of stock</span>
                                    {% elseif book.stock <= 10 %}
                                        <span class="badge bg-warning text-dark">{{ book.stock }}</span>
                                    {% else %}
                                        <span class="badge bg-success">{{ book.stock }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_book_show', {'id': book.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                    <form method="post" action="{{ path('admin_book_delete', {'id': book.id}) }}" style="display:inline" onsubmit="return confirm('Delete this book?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No books found. <a href="{{ path('admin_book_new') }}">Create one</a></p>
        {% endif %}
    </div>
</div>
{% endblock %}
