{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
{{ form_row(form.title) }}
{{ form_row(form.description) }}
<div class="row">
    <div class="col-md-6">{{ form_row(form.price) }}</div>
    <div class="col-md-6">{{ form_row(form.stock) }}</div>
</div>
<div class="row">
    <div class="col-md-6">{{ form_row(form.category) }}</div>
    <div class="col-md-6">{{ form_row(form.editor) }}</div>
</div>
{{ form_row(form.authors) }}
{{ form_row(form.coverImageFile) }}
{% if book.coverImage %}
    <div class="mb-3">
        <label class="form-label">Current Cover</label><br>
        <img src="{{ asset('uploads/books/' ~ book.coverImage) }}" alt="{{ book.title }}" style="max-width: 200px; height: auto;" class="img-thumbnail">
    </div>
{% endif %}
<button class="btn btn-success"><i class="bi bi-save"></i> Save</button>
<a href="{{ path('admin_book_index') }}" class="btn btn-secondary">Cancel</a>
{{ form_end(form) }}

