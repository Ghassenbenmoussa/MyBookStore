{% extends 'admin/base.html.twig' %}
{% block title %}Order #{{ order.id }} - Admin{% endblock %}
{% block body %}
<div class="mb-3">
    <a href="{{ path('admin_order_index') }}" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to Orders</a>
    <a href="{{ path('admin_order_edit', {'id': order.id}) }}" class="btn btn-warning"><i class="bi bi-pencil"></i> Update Status</a>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Order #{{ order.id }}</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h6>Order Information</h6>
                        <p><strong>Date:</strong> {{ order.orderDate|date('F j, Y, g:i a') }}</p>
                        <p><strong>Status:</strong> 
                            {% if order.status == 'pending' %}
                                <span class="badge bg-warning text-dark">Pending</span>
                            {% elseif order.status == 'confirmed' %}
                                <span class="badge bg-info">Confirmed</span>
                            {% elseif order.status == 'shipped' %}
                                <span class="badge bg-primary">Shipped</span>
                            {% elseif order.status == 'delivered' %}
                                <span class="badge bg-success">Delivered</span>
                            {% elseif order.status == 'cancelled' %}
                                <span class="badge bg-danger">Cancelled</span>
                            {% endif %}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6>Customer Information</h6>
                        <p><strong>Name:</strong> {{ order.user.fullName }}</p>
                        <p><strong>Email:</strong> {{ order.user.email }}</p>
                        {% if order.user.phone %}
                            <p><strong>Phone:</strong> {{ order.user.phone }}</p>
                        {% endif %}
                        {% if order.user.address %}
                            <p><strong>Address:</strong> {{ order.user.address }}</p>
                        {% endif %}
                    </div>
                </div>
                <h6>Order Items</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.orderItems %}
                                <tr>
                                    <td>
                                        {% if item.book.coverImage %}
                                            <img src="{{ asset('uploads/books/' ~ item.book.coverImage) }}" alt="{{ item.book.title }}" style="width: 30px; height: auto;" class="me-2">
                                        {% endif %}
                                        {{ item.book.title }}
                                    </td>
                                    <td>${{ item.price }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td><strong>${{ item.subtotal|number_format(2) }}</strong></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td><strong class="text-success">${{ order.totalAmount }}</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6>Order Summary</h6>
            </div>
            <div class="card-body">
                <p><strong>Total Items:</strong> {{ order.orderItems|length }}</p>
                <p><strong>Total Amount:</strong> <span class="text-success">${{ order.totalAmount }}</span></p>
                <hr>
                <p class="mb-0"><small class="text-muted">Order placed on {{ order.orderDate|date('M j, Y') }}</small></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
