{% extends 'base.html.twig' %}
{% block title %}Categories - MyBookstore{% endblock %}
{% block body %}
<h1>Browse by Category</h1>
<div class="row">
    {% for category in categories %}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ category.name }}</h5>
                    <p class="card-text">{{ category.description }}</p>
                    <p><span class="badge bg-primary">{{ category.books|length }} books</span></p>
                    <a href="{{ path('catalog_category_show', {'id': category.id}) }}" class="btn btn-primary">View Books</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>No categories found.</p>
    {% endfor %}
</div>
{% endblock %}
