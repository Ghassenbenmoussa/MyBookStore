{% extends 'base.html.twig' %}
{% block title %}{{ book.title }} - MyBookstore{% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-4">
        {% if book.coverImage %}
            <img src="{{ asset('uploads/books/' ~ book.coverImage) }}" class="img-fluid" alt="{{ book.title }}">
        {% endif %}
    </div>
    <div class="col-md-8">
        <h1>{{ book.title }}</h1>
        <p class="lead">{{ book.description }}</p>
        <p><strong>Price:</strong> ${{ book.price }}</p>
        <p><strong>Authors:</strong>
            {% for author in book.authors %}
                <a href="{{ path('catalog_author_show', {'id': author.id}) }}">{{ author.fullName }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
        </p>
        <p><strong>Category:</strong> <a href="{{ path('catalog_category_show', {'id': book.category.id}) }}">{{ book.category.name }}</a></p>
        <p><strong>Editor:</strong> <a href="{{ path('catalog_editor_show', {'id': book.editor.id}) }}">{{ book.editor.name }}</a></p>
        {% if book.stock > 0 %}
            <p><span class="badge bg-success">In Stock ({{ book.stock }})</span></p>
            {% if app.user %}
                <form method="post" action="{{ path('cart_add', {'id': book.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('cart_add' ~ book.id) }}">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-cart-plus"></i> Add to Cart</button>
                </form>
            {% else %}
                <p><a href="{{ path('app_login') }}" class="btn btn-primary">Login to Purchase</a></p>
            {% endif %}
        {% else %}
            <p><span class="badge bg-danger">Out of Stock</span></p>
        {% endif %}
    </div>
</div>
{% endblock %}

